<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HoneywellFOOD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/text_white</item>

        <item name="colorSecondary">@color/accent_black</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/text_white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/background_dark</item>

        <item name="cardBackgroundColor">@color/background_medium</item>
        <item name="cardForegroundColor">@color/text_white</item>

        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <item name="android:background">@color/background_medium</item>
        <item name="colorSurface">@color/background_medium</item>
        <item name="colorOnSurface">@color/text_white</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <item name="android:background">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_white</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSurface">@color/background_medium</item>
    </style>

    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:background">@color/background_medium</item>
        <item name="android:headerBackground">@color/dark_purple</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/background_light</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:popupBackground">@color/background_dark</item>
    </style>

    <style name="Theme.HoneywellFOOD" parent="Base.Theme.HoneywellFOOD" />
</resources>